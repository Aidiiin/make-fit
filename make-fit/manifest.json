{
  "name": "Make Fit",
  "version": "0.0.2",
  "manifest_version": 3,
  "description": "A browser extension for Edge and Chrome to make websites look more readable and user-friendly using CSS.",
  "action": {
    "default_popup": "./popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.github.com/*"],
      "css": ["./styles/github.css"]
    },
    {
      "matches": ["https://*.youtube.com/*"],
      "css": ["./styles/youtube.css"]
    }
  ]
}
